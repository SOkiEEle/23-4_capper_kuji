<script>

  const msgforme = document.getElementById("msgbox");
  const namebox = document.getElementById("name");

  const msgbox = document.getElementById("msg");
  const index = Math.floor(Math.random() * 5);

  const omikujiMsg = document.getElementById("omikuji-msg");
  const index2 = Math.floor(Math.random() * 20);

  if (index2 >= 19) {
    omikujiMsg.innerHTML = "運勢<br>満塁ホームラン";
    msgbox.innerHTML = "4HR";
  } else if (index2 >= 17) {
    omikujiMsg.innerHTML = "運勢<br>ホームラン";
    msgbox.innerHTML = "HR";
  } else if (index2 >= 15) {
    omikujiMsg.innerHTML = "運勢<br>3BH";
    msgbox.innerHTML = "3BH";
  } else if (index2 >= 12) {
    omikujiMsg.innerHTML = "運勢<br>2BH";
    msgbox.innerHTML = "2BH";
  } else if (index2 >= 7) {
    omikujiMsg.innerHTML = "運勢<br>1BH";
    msgbox.innerHTML = "1BH";
  } else if (index2 >= 3) {
    omikujiMsg.innerHTML = "運勢<br>ファール";
    msgbox.innerHTML = "普段も<br>決めきれないもんな";
  } else {
    omikujiMsg.innerHTML = "運勢<br>三振";
    msgbox.innerHTML = "いつも通りだな";
  }

</script>

